--- 

apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: ovn4nfv-cni
spec:
  template:
    spec:
      containers:
      - name: ovn4nfv
        env:
        - name: "HTTP_PROXY"
          value: {{ proxy_http }}
        - name: "HTTPS_PROXY"
          value: {{ proxy_https }}
        - name: "http_proxy"
          value: {{ proxy_http }}
        - name: "https_proxy"
          value: {{ proxy_https }}
        - name: "no_proxy"
          value: {{ proxy_noproxy }}
        - name: "NO_PROXY"
          value: {{ proxy_noproxy }}
        - name: "ftp_proxy"
          value: {{ proxy_ftp }}
        - name: "FTP_PROXY"
          value: {{ proxy_ftp }}
