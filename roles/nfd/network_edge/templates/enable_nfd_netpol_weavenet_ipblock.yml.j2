apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: nfd-network-policy
  namespace: openness
spec:
  podSelector:
    matchLabels:
      app: nfd-master
  policyTypes:
  - Ingress
  ingress:
  - from:
    - podSelector:
        matchLabels:
          app: nfd-worker
    - ipBlock:
        cidr: {{ weavenet_cidr }}
    ports:
    - protocol: TCP
      port: 8080
